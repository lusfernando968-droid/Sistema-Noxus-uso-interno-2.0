{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting - Etapa 1: Verificações Básicas */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    // ✅ Etapa 1: Verificações ativadas para melhorar qualidade do código
    "noFallthroughCasesInSwitch": true, // Previne bugs em switch statements
    "noImplicitReturns": true, // Garante return em todas as code paths
    "noUncheckedIndexedAccess": true, // Força verificação de array/object access
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "Noxus-Dashboard-vers-o-1.0.1-/**",
    "**/Noxus-Dashboard-vers-o-1.0.1-/**"
  ]
}